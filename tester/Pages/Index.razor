@page "/"
@inject NavigationManager _navManager
@inject IJSRuntime _js;

<h1 class="title">Вы не должны видеть эту страницу.
    Если она не исчезает - что-то не так.</h1>
<h1 class="subtitle">@uri</h1>

@code
{
    private string uri = "";

    protected override Task OnParametersSetAsync()
    {
        uri = _navManager.BaseUri;
        if (uri.Contains("localhost") | uri.Contains("127.0.0.1"))
        {
            _navManager.NavigateTo("/Admin");
        }
        else
        {
            uri = "False";
        }
        base.OnInitialized();
        return base.OnParametersSetAsync();
    }

}
